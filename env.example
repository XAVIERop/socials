# Server Configuration
PORT=3000
NODE_ENV=production

# Security & Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Email Configuration
GMAIL_USER=pv.socialstudio@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here
CONTACT_EMAIL=pv.socialstudio@gmail.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000
HELMET_HSTS_INCLUDE_SUBDOMAINS=true

# CORS Configuration
CORS_ORIGIN=https://socialstudio.in,https://www.socialstudio.in
CORS_CREDENTIALS=true

# Session Security
SESSION_SECRET=your-super-secure-session-secret-key
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Database (for future use)
DATABASE_URL=your_database_connection_string_here

# API Keys (for future integrations)
GOOGLE_ANALYTICS_ID=your_google_analytics_id
FACEBOOK_APP_ID=your_facebook_app_id
LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking
